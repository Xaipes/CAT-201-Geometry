               <Font name="Courier New Bold" size="18.0" />
           </font>
       </Label>
       <Label fx:id="score" alignment="TOP_RIGHT" layoutX="488.0" layoutY="15.0" prefHeight="23.0" prefWidth="98.0" text="Score" textFill="WHITE">
           <font>
               <Font name="Courier New Bold" size="18.0" />
           </font>
       </Label>
      <Label fx:id="ScaleValue" layoutX="84.0" layoutY="304.0" prefHeight="20.0" prefWidth="143.0" text="Reflected On:" textFill="WHITE">
         <font>
            <Font name="Courier New Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="enterAxisVal" layoutX="402.0" layoutY="300.0" />
